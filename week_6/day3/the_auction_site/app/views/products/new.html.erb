<ul>
  <% if flash[:error] %>
		<% flash[:error].each do | error | %>
			<li>
				<%= error  %>
			</li>
		<% end %>
	<% end %>
</ul>

<%= form_for [@user, @product] do | f |  %>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>

	<%= f.label :deadline %><br>
	<%= f.datetime_local_field :deadline  %>
	<br>
	<%= f.submit %>
<% end %>