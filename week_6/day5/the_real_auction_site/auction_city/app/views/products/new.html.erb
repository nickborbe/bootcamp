<h1>List a New Product  </h1>
<%= form_for [@user, @product] do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :deadline %>
 <%=f.datetime_select :deadline, :ampm => true, :start_minute => [0,15,30,45] %>
<br>
   
<%= f.label :description %>
<%= f.text_area :description %>

  <%= f.submit "Submit" %>
<% end %>